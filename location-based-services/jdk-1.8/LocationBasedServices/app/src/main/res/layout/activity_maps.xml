<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anhkhue.locationbasedservices.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.anhkhue.locationbasedservices.MapsActivity" />

    <RelativeLayout
        android:id="@+id/innerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/iconSearch"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/iconSearch"
            android:layout_toRightOf="@+id/iconSearch"
            android:hint="Enter Address, City or Zip Code"
            android:imeOptions="actionSearch"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iconTheme"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/innerLayout"
        android:layout_alignStart="@+id/innerLayout"
        android:layout_below="@+id/innerLayout"
        android:src="@drawable/ic_dark" />

    <ImageView
        android:id="@+id/iconGps"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/innerLayout"
        android:layout_alignRight="@+id/innerLayout"
        android:layout_below="@+id/innerLayout"
        android:src="@drawable/ic_gps" />

</RelativeLayout>


